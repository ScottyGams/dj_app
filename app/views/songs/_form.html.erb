<%= form_for(@song) do |f| %>
  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@song.errors.count, "error") %> prohibited this song from being saved:</h2>

      <ul>
      <% @song.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, 'Song:' %>
    <%= f.text_field :name, :autofocus => true %>
  </div>
  <div class="field">
    <%= f.label :description, 'Description:' %>
  <%= f.text_area :description, size: "15x5" %>
  </div>
  <div class="field">
    <%if can? :manage, @music_track and current_user.role== "admin" %>
    <%= f.label :user_id, 'DJ:' %>
    <%= f.select(:user_id, User.not_admin_users.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
  <% end %>
  </div>
  <div >
  <% Genre.order(:name).each do |genre| %><br>
    <%= genre.name %>
    <%= check_box_tag 'song[genre_ids][]', genre.id, genre.in?(@song.genres.to_a) %>
  <% end %>
</div>
  <div >
  <%= f.label :song_upload, 'Song Upload:' %>
  <%= f.file_field :song_upload%>
</div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
